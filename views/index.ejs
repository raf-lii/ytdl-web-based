<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- Style CSS -->
    <link href="/css/style.css" rel="stylesheet">

    <title>Youtube Downloader</title>
  </head>
  <body>
    
    <div class="container">
        <div class="d-flex justify-content-center">
            <div class="card">
                <div class="card-header">
                  <span class="text-center">Youtube Downloader</span>
                </div>
                <div class="card-body">
                    <form class="row g-3" action="/Download" method="GET">
                        <div class="form-floating col-auto">
                            <input name="url" type="text" class="form-control" id="url" placeholder="Password">
                            <label for="floatingPassword">Url</label>
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-primary mt-2" id="convert">Submit</button>
                        </div>
                    </form>
                </div>
              </div>
        </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->
    <script type="text/javascript">
    var convertBtn = document.querySelector('#convert');
    var URLinput = document.querySelector('#url');
    
    convertBtn.addEventListener('click', () => {
    console.log(`URL: ${URLinput.value}`);
    sendURL(URLinput.value);
    });

    function sendURL(URL) {
    var baseURI = window.URLinput.baseURI;
    fetch(`${baseURI}/Download?url=${URL}`, {
        method:'GET'
    }).then(res => res.json())
    .then(json => console.log(json));
    }
    </script>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="/js/bootstrap.bundle.min.js"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
